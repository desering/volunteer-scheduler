---
import { Container, Flex } from "styled-system/jsx";
import NavBar from "~/components/navbar.astro";
import { ShiftOverview } from "~/components/shift-overview";
import { groupAndSortShiftsByDate } from "~/utils/map-shifts";
import Layout from "../layouts/layout.astro";
import { button } from "styled-system/recipes";
---

<Layout title="Shifter">
  <Container marginTop={{ base: 4, xl: 20 }}>
    <Flex flexDir="column" gap="10">
      <NavBar />

      <a href="/auth/logout" class={button({ size: "lg", variant: "outline" })}>
        Logout
      </a>
    </Flex>
  </Container>
</Layout>
