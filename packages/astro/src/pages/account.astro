---
import { Container, Flex } from "styled-system/jsx";
import { button } from "styled-system/recipes/button";
import NavBar from "~/components/navbar.astro";
import Layout from "../layouts/layout.astro";
import { UpcomingEventsList } from "../components/upcoming-events-list";
import { actions } from "astro:actions";
import { prepareEvent } from "~/utils/map-events";

if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}

const events = await Astro.callAction(
  actions.getUpcomingEventsForCurrentUser,
  {},
);

const renderedEvents = await Promise.all(
  (events.data ?? []).map(async (event) => await prepareEvent(event)),
);
---

<Layout title="Volunteering Schedule">
  <NavBar />

  <Container marginTop={{ base: 4, xl: 20 }}>
    <h1>My upcoming shifts</h1>
  </Container>

  <UpcomingEventsList events={renderedEvents} client:load />

  <Container marginTop={{ base: 4, xl: 20 }}>
    <Flex flexDir="column" gap="10">
      <a href="/auth/logout" class={button({ size: "lg", variant: "outline" })}>
        Logout
      </a>
    </Flex>
  </Container>
</Layout>
