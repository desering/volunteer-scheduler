---
import { actions } from "astro:actions";
import { Container, Flex, panda } from "styled-system/jsx";
import { button } from "styled-system/recipes/button";
import NavBar from "~/components/navbar.astro";
import { UpcomingEventsList } from "../components/upcoming-events-list";
import Layout from "../layouts/layout.astro";

if (!Astro.locals.user) {
  return Astro.redirect("/auth/login");
}

const events = await Astro.callAction(
  actions.getUpcomingEventsForCurrentUser,
  {},
);
---

<Layout title="Volunteering Schedule">
  <NavBar />

  <Container marginTop={{ base: 4, xl: 20 }} marginBottom="4">
    <panda.h1 fontSize="2xl" fontWeight="medium">My upcoming shifts</panda.h1>
  </Container>

  <UpcomingEventsList
    user={Astro.locals.user}
    events={events.data}
    client:load
  />

  <Container marginTop={{ base: 4, xl: 20 }}>
    <Flex flexDir="column" gap="10">
      <a href="/auth/logout" class={button({ size: "lg", variant: "outline" })}>
        Logout
      </a>
    </Flex>
  </Container>
</Layout>
