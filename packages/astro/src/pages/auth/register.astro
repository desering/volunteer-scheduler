// https://github.com/payloadcms/payload/blob/main/packages/next/src/routes/rest/auth/login.ts
// Astro alternative on above file

import { css } from "styled-system/css/css";
import { Container, Flex, HStack, panda } from "styled-system/jsx";
import { vstack } from "styled-system/patterns";
import { button } from "styled-system/recipes/button";
import { input } from "styled-system/recipes/input";
import Layout from "~/layouts/layout.astro";
import { actions } from "astro:actions";
import { link } from "../../../styled-system/recipes";

if (Astro.locals.user) {
  return Astro.redirect("/");
}

const errors: string[] = [];

if (Astro.request.method === "POST") {
  const data = await Astro.request.formData();

  const preferredName = data.get("preferredName") as string | null;
  const email = data.get("email") as string | null;
  const phoneNumber = data.get("phoneNumber") as string | null;
  const password = data.get("password") as string | null;
  const passwordAgain = data.get("password-again") as string | null;

  if (
    preferredName &&
    preferredName.length >= 3 &&
    email &&
    phoneNumber &&
    password &&
    passwordAgain &&
    password === passwordAgain
  ) {
    const registrationSuccess = await Astro.callAction(actions.createUser, {
      preferredName,
      email,
      phoneNumber,
      password,
    });

    console.log("registrationSuccess", registrationSuccess);
    if (registrationSuccess.data) {
      await Astro.callAction(actions.loginUser, {
        email,
        password,
      });
      return Astro.redirect("/");
    }

    errors.push(registrationSuccess.error.message);
  } else {
    if (!preferredName) {
      errors.push("Preferred name is required.");
    } else if (preferredName.length < 3) {
      errors.push("Preferred name must be at least 3 characters.");
    }

    if (!email) errors.push("Email is required.");

    if (!phoneNumber) errors.push("Phone number is required.");

    if (!password) errors.push("Password is required.");
    if (password !== passwordAgain) errors.push("Passwords do not match.");
  }
}
---

<Layout title="Register | De Sering Volunteer Schedule">
  <panda.div
    display="flex"
    minHeight="screen"
    width="screen"
    justifyContent="center"
    alignItems="center"
  >
    <Container>
      <form method="POST" class={vstack({ alignItems: "stretch" })}>
        {
          errors.map((error) => (
            <panda.div
              class={css({
                color: "gray.1",
                backgroundColor: "tomato",
                paddingX: "4",
                paddingY: "2",
              })}
            >
              <panda.div>{error}</panda.div>
            </panda.div>
          ))
        }

        <panda.div width="full">
          <label for="preferredName">Preferred Name:</label>
          <input
            type="text"
            id="preferredName"
            name="preferredName"
            required
            class={input({
              size: "lg",
            })}
          />
          <p>This will be visible to everyone</p>
        </panda.div>

        <panda.div width="full">
          <label for="email">Email:</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class={input({
              size: "lg",
            })}
          />
        </panda.div>

        <panda.div width="full">
          <label for="phoneNumber">Phone Number:</label>
          <input
              type="tel"
              id="phoneNumber"
              name="phoneNumber"
              required
              class={input({
                size: "lg",
              })}
          />
        </panda.div>

        <panda.div width="full">
          <label for="password">Password:</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class={input({
              size: "lg",
            })}
          />
        </panda.div>

        <panda.div width="full">
          <label for="password">Confirm Password:</label>
          <input
            type="password"
            id="password-again"
            name="password-again"
            required
            class={input({
              size: "lg",
            })}
          />
        </panda.div>

        <HStack>
          <a
              type="button"
              href='/'
              class:list={[
                button({ size: "lg", variant: "outline" }),
                css({ flexGrow: 1 }),
              ]}
          >
            Cancel
          </a>
          <button
              type="submit"
              class:list={[
                button({ size: "lg", variant: "solid" }),
                css({ flexGrow: 1 }),
              ]}
          >
            Register
          </button>
        </HStack>

      <div class:list={[css({textAlign: "center", marginY: '10px'})]}>
          Already have an account? <a href='/auth/login' class:list={[link()]}>Login</a>
      </div>
      </form>
    </Container>
  </panda.div>
</Layout>
